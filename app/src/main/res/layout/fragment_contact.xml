<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactFragment">

    <TextView
        android:id="@+id/contactus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:background="#B04400"
        android:text="Contact Us"
        android:textSize="20sp"
        android:textColor="#FF914D"
        android:paddingStart="15sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"/>
    <TextView
        android:id="@+id/principalname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactus"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:background="#D9D9D9"
        android:text="Dr. Rama (Principal)"
        android:textSize="25sp"
        android:paddingStart="60sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"/>
    <ImageView
        android:id="@+id/principal_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile"
        android:layout_below="@+id/contactus"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="45sp"
        android:layout_marginRight="30sp"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/principalname"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:background="#D9D9D9"
        android:text="Mahatma Hansraj Marg Malkaganj, Delhi 110007, India"
        android:textSize="25sp"
        android:paddingStart="60sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingEnd="10sp"/>
    <ImageView
        android:id="@+id/address_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location"
        android:layout_below="@+id/principalname"
        android:layout_marginTop="45sp"
        android:layout_marginLeft="45sp"
        android:layout_marginRight="30sp"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:background="#D9D9D9"
        android:text="+91-11-27667747, +91-11-27667458"
        android:textSize="25sp"
        android:paddingStart="60sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingEnd="10sp"/>
    <ImageView
        android:id="@+id/phone_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_phone"
        android:layout_below="@+id/address"
        android:layout_marginTop="35sp"
        android:layout_marginLeft="45sp"
        android:layout_marginRight="30sp"/>

    <TextView
        android:id="@+id/landline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:background="#D9D9D9"
        android:text="+91-11-27666338"
        android:textSize="25sp"
        android:paddingStart="60sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingEnd="10sp"/>
    <ImageView
        android:id="@+id/landlinephone_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_speakerphone"
        android:layout_below="@+id/phone"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="45sp"
        android:layout_marginRight="30sp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/landline"
        android:background="#D9D9D9"
        android:text="principal_hrc@yahoo.com"
        android:autoSizeTextType="uniform"
        android:textSize="22sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:paddingStart="60sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingEnd="10sp"/>
    <ImageView
        android:id="@+id/mail_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_email"
        android:layout_below="@+id/landline"
        android:layout_marginTop="17sp"
        android:layout_marginLeft="45sp"
        android:layout_marginRight="30sp"/>

</RelativeLayout>