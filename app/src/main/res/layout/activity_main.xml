<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/red_gradient">

    <ImageView
        android:id="@+id/clg_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/hansraj_scaled"/>

    <ImageView
        android:id="@+id/clg_logo"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:src="@drawable/logohrc"
        android:layout_below="@+id/clg_image"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clg_image"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="48dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/clg_logo"
        android:fontFamily="sans-serif-condensed"
        android:text="Hansraj College"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <View
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/clg_logo"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:background="#efc600"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:backgroundTint="@color/yellow"
        android:layout_below="@+id/clg_logo"
        android:layout_centerHorizontal="true"
        android:text="@string/Next_Page"
        app:cornerRadius="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="50dp"/>

    <!--
    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:backgroundTint="@color/yellow"
        android:layout_below="@+id/clg_logo"
        android:layout_centerHorizontal="true"
        android:text="@string/Next_Page"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="50dp"/>-->

</RelativeLayout>